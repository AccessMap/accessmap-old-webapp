extends layout

block content
  .col-md-8.col-md-offset-2
    h2 Register
    br
    form(action='/register', method='POST', style='max-width: 300px;')
      .form-group
        input.form-control(type='test', name='username', placeholder='Username')
        input.form-control(type='email', name='email', placeholder='youremail@domain.com')
        input.form-control(type='password', name='password', placeholder='Password')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Log in
        a(href='/')
          button.btn(type='button') Cancel
