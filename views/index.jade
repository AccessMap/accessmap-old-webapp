extends layout
append head
  style.
    html, body, #map {
        height: 100%;
        width: 100%;
    }

    .legend {
        background-color: #fff;
        border-radius: 3px;
        bottom: 30px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.10);
        font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
        padding: 10px;
        position: absolute;
        right: 10px;
        white-space: nowrap;
        z-index: 1;
    }

    .legend h4 {
        margin: 0 0 10px;
    }

    .legend-container {
        position: relative;
    }

    .legend-scale .gradient span {
        display: inline-block;
        height: 20px;
        width: 1%;
    }

    .legend-scale .domain {
        height: 20px;
    }

    .legend-scale .domain span {
        position: absolute;
    }

    .legend-scale .domain .min {
        text-align: left;
        left:0;
    }

    .legend-scale .domain .mid {
        text-align: center;
        left: 25%;
        right: 25%;
    }

    .legend-scale .domain .max {
        text-align: right;
        right: 0;
    }

append content
  #map
  .legend
    .legend-container
      .legend-title
        h4 Grade (%)
      .legend-scale
        .gradient
        .domain
          span.min 0.0
          span.mid 5.0
          span.max 8.3

  script(src='build/map-bundle.js')
  script.
    App(!{mapbox_token});
